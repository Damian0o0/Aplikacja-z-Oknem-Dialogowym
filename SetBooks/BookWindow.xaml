<Window x:Class="SetBooks.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SetBooks"
        mc:Ignorable="d"
        Title="BookWindow" Height="450" Width="500">
    <Grid>
        <StackPanel Grid.Column="0" Background="AliceBlue" Margin="10,10,10,0">
            <Label>Tytuł</Label>
            <TextBox x:Name="fName" Text="{Binding Path=Title}"/>
            <Label>Autor</Label>
            <TextBox x:Name="LName" Text="{Binding Path=Autor}"/>
            <Label>Klasa</Label>
            <ComboBox x:Name="education" Text="{Binding Education}"></ComboBox>

            <Button x:Name="btnOk" IsDefault="True" Click="btnOk_Click" Margin="0,10,0,10">Ok</Button>
            <Button x:Name="btnCancel" IsDefault="True" Click="btnCancel_Click" Margin="0,0,0,10">Anuluj</Button>

        </StackPanel>

    </Grid>
</Window>
